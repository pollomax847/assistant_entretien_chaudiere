{
  "version": 2,
  "builds": [
    { "src": "**/*", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/public/js/(.*)\\.js$",
      "headers": { 
        "Content-Type": "application/javascript; charset=utf-8"
      },
      "dest": "/public/js/$1.js"
    },
    {
      "src": "/public/css/(.*)\\.css$",
      "headers": { 
        "Content-Type": "text/css; charset=utf-8"
      },
      "dest": "/public/css/$1.css"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}